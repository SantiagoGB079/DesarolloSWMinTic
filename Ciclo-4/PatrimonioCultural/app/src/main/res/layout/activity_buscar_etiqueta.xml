<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuscarEtiqueta">

    <EditText
        android:id="@+id/txtBuscarEtiqueta"
        android:layout_width="342dp"
        android:layout_height="45dp"
        android:layout_marginTop="248dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Buscar etiqueta"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btnBusquedaEtiqueta"
        android:layout_width="156dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="100dp"
        android:text="BUSCAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBuscarEtiqueta"
        app:layout_constraintVertical_bias="0.01" />

    <Button
        android:id="@+id/btnCamara"
        android:layout_width="161dp"
        android:layout_height="48dp"
        android:text="CAMARA"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnBusquedaEtiqueta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBusquedaEtiqueta" />
</androidx.constraintlayout.widget.ConstraintLayout>